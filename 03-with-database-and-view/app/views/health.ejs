<%- include('header') %>

<div class="card">
    <div class="card-header">
        <h2><i class="bi bi-heart-pulse me-2"></i>Stato del Servizio</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill me-2"></i> Il servizio Ã¨ operativo
        </div>
        
        <div class="mt-4">
            <h4><i class="bi bi-info-circle me-2"></i>Informazioni di Sistema</h4>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Servizio
                    <span class="badge bg-primary rounded-pill">Node.js App</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Versione
                    <span class="badge bg-primary rounded-pill">1.0.0</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Uptime
                    <span class="badge bg-primary rounded-pill" id="uptime">-</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Data e ora
                    <span class="badge bg-primary rounded-pill" id="current-time">-</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
    // Aggiorna l'ora corrente
    function updateTime() {
        const now = new Date();
        document.getElementById('current-time').textContent = now.toLocaleString('it-IT');
    }
    
    // Chiama la funzione ogni secondo
    updateTime();
    setInterval(updateTime, 1000);
    
    // Simula uptime
    const startTime = new Date();
    
    function updateUptime() {
        const now = new Date();
        const diff = now - startTime;
        
        const seconds = Math.floor(diff / 1000) % 60;
        const minutes = Math.floor(diff / (1000 * 60)) % 60;
        const hours = Math.floor(diff / (1000 * 60 * 60));
        
        document.getElementById('uptime').textContent = `${hours}h ${minutes}m ${seconds}s`;
    }
    
    // Aggiorna l'uptime ogni secondo
    updateUptime();
    setInterval(updateUptime, 1000);
</script>

